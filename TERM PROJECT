CREATE DATABASE DELEONKINGMULTIVITE

USE DELEONKINGMULTIVITE

CREATE TABLE UniqueIDs
(UNIT_CODE VARCHAR (20),
UNIT VARCHAR (20),
ITEM_CATEGORY_CODE VARCHAR (20),
ITEM_CATEGORY VARCHAR (40),
ITEM_SUPPLIER_CODE VARCHAR (20),
ITEM_SUPPLIE_NAME VARCHAR (40),
BUSINESS_PARTNER_SUPPLY_TYPE_CODE VARCHAR(20),
SUPPLY_CATEGORY VARCHAR (40),
SEX_CODE VARCHAR (20),
SEX VARCHAR (20),
SALES_POSITION_CODE VARCHAR (20),
SALES_POSITION VARCHAR (40));

CREATE TABLE ItemMaster
(ITEM_CODE VARCHAR (20),
ITEM_NAME VARCHAR (40),
QUANTITY INT,
UNIT VARCHAR (20),
CATEGORY VARCHAR (40),
SUPPLIER VARCHAR (40));

CREATE TABLE BusinessPartners
(BUSINESS_PARTNER_CODE VARCHAR (20),
COMPANY_NAME VARCHAR (40),
SUPPLY_CATEGORY VARCHAR (40),
RM_DISCOUNT INT,
EQUIPMENT_DISCOUNT INT);

CREATE TABLE Personnel
(DOCTOR_CODE VARCHAR (20),
SURNAME VARCHAR (40),
FIRST_NAME VARCHAR (40),
AGE INT,
SEX VARCHAR (20),
SPECIALTY_POSITION VARCHAR (40));

CREATE TABLE OrderList
(ORDER_CODE VARCHAR (20),
ORDER_CATEGORY VARCHAR (40),
PRICE INT);

CREATE TABLE CustomerRecord
(CUSTOMER_CODE VARCHAR (20),
CUSTOMER_NAME VARCHAR (40),
LOCATION VARCHAR (20),
BUSINESS_CATEGORY VARCHAR (20));
